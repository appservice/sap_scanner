<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_vertical|top"
            android:layout_weight="2"
            android:background="@drawable/btn_black"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:src="@drawable/images_small"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="200dip" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/logo3"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:gravity="center">

            <Button
                android:id="@+id/activity_main_bnt_rw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="40dip"
                android:layout_marginTop="40dip"
                android:height="200dip"
                android:text="@string/btn_rw_main_activ_text"
                android:textSize="40sp"
                android:textStyle="bold"
                android:width="200dip"
                android:background="@drawable/btn_blue" />

            <Button
                android:id="@+id/activity_main_btn_pz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="40dip"
                android:height="200dip"
                android:text="@string/btn_pz_main_activ_text"
                android:textSize="40sp"
                android:textStyle="bold"
                android:width="200dip"
                android:background="@drawable/btn_red"
                android:layout_marginLeft="40dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center">

            <Button
                android:id="@+id/activity_main_btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@string/btn_serach_main_activ_text"
                android:textSize="28sp"
                android:textStyle="bold"
                android:background="@drawable/btn_green"
                android:layout_marginRight="40dip"
                android:layout_marginLeft="20dip"
                android:width="200dip"
                android:height="100dip"
                android:layout_marginTop="40dip" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inwentaryzacja"
                android:id="@+id/button"
                android:layout_gravity="top"
                android:background="@drawable/btn_green"
                android:layout_marginRight="20dip"
                android:width="200dip"
                android:layout_marginLeft="40dip"
                android:height="100dip"
                android:textSize="20sp"
                android:layout_marginTop="40dip"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center">

            <Button
                android:id="@+id/activity_main_btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_settings_main_activ_text"
                android:textSize="28sp"
                android:textStyle="bold"

                android:width="300dip"
                android:onClick="setListFooter"
                android:layout_gravity="center_horizontal|top"
                android:background="@android:drawable/btn_default"
                android:height="100dip" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
  