<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="fill_parent"
        android:layout_width="50dip"
        android:orientation="vertical"
        android:background="#555555"
        android:layout_gravity="bottom">
        <!--  <CheckBox android:id="@+id/CheckBox01" android:layout_width="fill_parent"
            android:clickable="true" android:layout_height="wrap_content"
            android:layout_marginLeft="5dip" android:layout_marginTop="10dip"></CheckBox>-->

        <TextView
            android:id="@+id/row_list_collected_nr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#555555"
            android:gravity="center_vertical|center_horizontal"
            android:text="NR:"
            android:textSize="25dp"
            android:layout_weight="4"></TextView>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_list_collected_iv"
            android:layout_weight="1"
            android:src="@drawable/ic_signature_big"
            android:adjustViewBounds="false"
            android:layout_marginTop="-6dp"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <TextView
            android:text="data wydania"
            android:layout_height="wrap_content"
            android:id="@+id/row_list_collected_tv_date"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_width="fill_parent"
            android:background="#555555"
            android:textColor="#eeeeee33"
            android:textSize="14dp"></TextView>

        <TextView
            android:text="INDEX"
            android:id="@+id/row_list_collected_tv_index"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="left"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

        </TextView>

        <TextView
            android:id="@+id/row_list_collected_tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="Nazwa"
            android:textColor="#ffbb55"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_list_collected_tv_amount_unit_isZero"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="ilsoc jednostka czy na zero"
            android:textColor="#22ff22"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/row_list_collected_tv_budget_mpk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="mpk  zlecenie"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>


</LinearLayout>
