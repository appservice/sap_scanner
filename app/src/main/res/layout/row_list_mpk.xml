<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_list_mpk_tv_budget"
        android:layout_gravity="right"
        android:textColor="#9a9a9a"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/row_list_mpk_tv_mpk"
        android:textSize="10sp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/row_list_mpk_tv_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/row_list_mpk_tv_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="25sp"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_list_mpk_tv_mpk"
        android:layout_gravity="right"
        android:layout_below="@+id/row_list_mpk_tv_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="3dp"
        android:textColor="#9A9A9A"
        android:layout_marginRight="15dp"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_list_mpk_iv_arrow"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_media_play"
        android:layout_centerInParent="true"
        android:layout_marginRight="3dp"
        android:visibility="invisible" />
</RelativeLayout>