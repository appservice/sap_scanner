<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:divider="#0f2e56"
    android:showDividers="beginning|middle|end">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="id"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:layout_marginLeft="5dip"
        android:textSize="15sp"
        android:width="35dip"
        android:id="@+id/row_list_materials_tv_nr" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:background="@drawable/btn_black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Index:"
            android:textSize="16sp"
            android:id="@+id/row_list_materials_tv_index" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa"
            android:id="@+id/row_list_materials_tv_name"
            android:layout_gravity="left|center_vertical"
            android:textSize="16sp"
            android:layout_marginTop="10dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skład"
                android:id="@+id/row_list_materials_tv_stock"
                android:textSize="16sp"
                android:layout_marginTop="10dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ilość+jednostka"
                android:id="@+id/row_list_materials_tv_unit"
                android:gravity="right"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="20dip"
                android:textSize="16sp"
                android:layout_marginTop="10dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>